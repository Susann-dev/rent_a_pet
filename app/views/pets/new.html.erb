<%= simple_form_for @pet do |f| %>
  <%= f.input :name %>
  <%= f.input :species, collection: Pet::SPECIES %>
  <%= f.input :age %>
  <%= f.input :description%>
  <%= f.input :price_per_day %>
  <%= f.input :location %>
  <%= f.input :available %>
  <%= f.submit 'Create a pet!', class: 'btn btn-primary' %>
<% end %>