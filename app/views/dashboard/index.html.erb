<div class="dashboard-wrapper">
  
  <div class="container">

    <div class="dashboard-main">
      
      <div class="dashboard-profile">
        <%= image_tag 'user_placeholder.jpg', id: 'dashboard-avatar' %>
        <div class="user-info-card">
          
        </div>
      </div>

      <div class="dashboard-body">
        
        <div class="dashboard-header">
          
          <div class="dashboard-buttons">
            <%= link_to "My Pets", dashboard_index_path(view: "pets"), class: 'btn btn-dashboard' %>  <%= link_to "My Bookings", dashboard_index_path(view: "bookings") , class: 'btn btn-dashboard' %>
          </div>
        </div>
        
        <div class="dashboard-window">
          <%= render 'pets' if params[:view] == 'pets' %>
          <%= render 'bookings' if params[:view] == 'bookings' %>  
        </div>
      </div>
    </div>
      
      <%= link_to 'Back to all pets', pets_path, class: 'btn main-btn' %>
      
    </div>
  </div>
</div>